<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>online.luffyk.filter.RegisterFilter</filter-class>
    </filter>
   <filter-mapping>
       <filter-name>RegisterFilter</filter-name>
       <url-pattern>/douserregister</url-pattern>
   </filter-mapping>

    <servlet>
        <servlet-name>doUserAddServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserSelectServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserSelectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toUserUpdateServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.toUserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserUpdateServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserDeleteServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserCaptchaServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserIdCheckServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserIdCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserCaptchaCheckServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserCaptchaCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserRegisterServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doUserLoginServlet</servlet-name>
        <servlet-class>online.luffyk.servlet.user.doUserLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>doUserAddServlet</servlet-name>
        <url-pattern>/admin_douseradd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserSelectServlet</servlet-name>
        <url-pattern>/admin_douserselect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>toUserUpdateServlet</servlet-name>
        <url-pattern>/admin_touserupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserUpdateServlet</servlet-name>
        <url-pattern>/admin_douserupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserDeleteServlet</servlet-name>
        <url-pattern>/admin_douserdelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserCaptchaServlet</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserIdCheckServlet</servlet-name>
        <url-pattern>/dousernamecheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserCaptchaCheckServlet</servlet-name>
        <url-pattern>/dousercaptchacheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserRegisterServlet</servlet-name>
        <url-pattern>/douserregister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doUserLoginServlet</servlet-name>
        <url-pattern>/douserlogin</url-pattern>
    </servlet-mapping>

</web-app>
